<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zahidmahmudemon.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/music2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/music2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Playlist"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".View_video_activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".AudioPlayerActivity"
            android:parentActivityName=".Playlist"
            android:theme="@style/AppTheme1" />
        <activity android:name=".VideoPlayerActivity"
            android:parentActivityName=".View_video_activity"


            ></activity>
    </application>

</manifest>